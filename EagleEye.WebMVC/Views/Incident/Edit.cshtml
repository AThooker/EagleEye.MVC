@model EagleEye.Models.IncidentEdit

@{
    ViewBag.Title = "Edit";
}

<h2 class="logoHead"><a href="https://eagleeyewebmvc20200909094613.azurewebsites.net/"><img src="~/EagleEyeLogo.png" alt="Eagle Eye" width="250" , height="190" /></a></h2>

<h3 class="update">--Update Your Report--</h3>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h6 style="margin-left: 40px;">* No information is too small *</h6>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.IncidentID)

    <div class="form-group">
        @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2", style = "font-size: 20px; font-family: 'Times New Roman', Times, serif;" })
        <div class="col-md-10">
            <div class="labels" style="font-size: 10px;">(Details of what happened)</div>
            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control long-width", style = "height: 50px;" } })
            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.TimeOfIncident, htmlAttributes: new { @class = "control-label col-md-2", style = "font-size: 20px; font-family: 'Times New Roman', Times, serif;" })
        <div class="col-md-10">
            <div class="labels" style="font-size: 10px;">(i.e. MM/DD/YYYY)</div>
            @Html.EditorFor(model => model.TimeOfIncident, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TimeOfIncident, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" style="background-color: grey; border: 2px solid black; color: white; margin-left: 100px;" class="btn btn-default btn-block" />
        </div>
    </div>
</div>
}
<img src="~/crowd.jpg" alt="Eagle Eye" width="700" , height="240" class="crowd" />
<img src="~/together.jpg" alt="Eagle Eye" width="700" , height="240" class="together" />
<div class="editBottom">
    @Html.ActionLink("Back to List", "Index", null, new { style = "color: black;" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
