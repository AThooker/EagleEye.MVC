@model IEnumerable<EagleEye.Models.IncidentListItem>

@{
    ViewBag.Title = "Index";
}

<h2 class="logoHead"><a href="https://localhost:44371/"><img src="~/EagleEyeLogo.png" alt="Eagle Eye" width="250" , height="190" /></a></h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "create" })
</p>
@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">

        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IncidentID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TimeOfIncident)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedUtc)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IncidentID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td style="max-width: 150px; max-height: 1000px;">
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeOfIncident)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedUtc)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.IncidentID }, new { @class = "attrib" }) |
                @Html.ActionLink("Details", "Details", new { id = item.IncidentID }, new { @class = "attrib" }) 
            </td>
        </tr>
    }

</table>
<a href="https://reliefweb.int/report/world/trafficking-persons-report-2020"><img src="~/busyStreet.jpg" alt="Eagle Eye" width="700" , height="240" class="street"/></a>
<p class="click">Click anywhere on the picture for more information on Human Trafficking</p>

